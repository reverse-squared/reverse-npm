{
  "compilerOptions": {
    "module": "es2015",
    "declaration": true,
    "declarationDir": "./packages",
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": ["es2020", "es2019", "es2018", "es2017", "es2016", "es2015", "dom"]
  },
  "exclude": ["node_modules", "**/*.test.ts", "jest.ts"]
}
